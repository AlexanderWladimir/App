<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout
            Padding="10,20,10,5">
            <Label 
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="Reserva de turnos"
                   />
            <Label Text="E-Mail">
            </Label>
            <Entry Keyboard="Email"
                   Placeholder="Ingrese su email...">
            </Entry>
            <Label Text="Contraseña">
            </Label>
            <Entry 
                IsPassword="True"
                Placeholder="Ingrese su contraseña"></Entry>
            <ActivityIndicator>
                
            </ActivityIndicator>
            <Button
                BorderRadius="50"
                BackgroundColor="Navy"
                Text="Login"
                TextColor="White">
               
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>